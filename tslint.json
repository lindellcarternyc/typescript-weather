{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "jsx-boolean-value": false,
    "no-consecutive-blank-lines": true,
    "quotemark": [true, "single", "jsx-double"],
    "semicolon": [true, "never"],
    "switch-default": true
  }
}
